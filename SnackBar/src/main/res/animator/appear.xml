<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together"
    android:duration="@integer/snackbar_appear_animation_length">

    <objectAnimator
        android:propertyName="translationY"
        android:valueFrom="@dimen/snack_bar_height"
        android:valueTo="@dimen/snack_bar_animation_position" />

    <objectAnimator
        android:propertyName="alpha"
        android:valueFrom="0.0"
        android:valueTo="1.0" />

</set>